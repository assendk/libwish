{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h1 class="text-center mb-4">Register</h1>
                {{ form_start(registrationForm, {'attr': {'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email address'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                </div>
                <div class="form-check">
                    {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
                    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">{{ registrationForm.agreeTerms.vars.label }}</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
